<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.regetir.UserTypeLogInFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/welcomeToText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/clean_bold"
        android:textColor="@color/blue"
        android:textSize="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/hayat"
        android:layout_width="59dp"
        android:layout_height="22sp"
        android:layout_marginTop="7dp"
        android:src="@drawable/group557"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeToText"
        />

    <TextView
        android:id="@+id/im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I’m …"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/clean_bold"
        android:textColor="@color/black"
        android:textSize="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hayat" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/im"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/user_type_item"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/next"
        android:layout_width="130dp"
        android:layout_height="53dp"
        android:layout_marginTop="35dp"
        app:cornerRadius="10dp"
        android:text="next"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:fontFamily="@font/cairo_bold"
        android:textSize="15dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
