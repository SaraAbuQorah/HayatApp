<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CustomBottomSheetDialog"
    tools:context=".ui.profile.LogOutBottomFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/slach"
        android:layout_width="40dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/gray2"
        app:cardCornerRadius="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />
    <TextView
        android:id="@+id/Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/clean_bold"
        android:text="Logout"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/delet"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/clean_regular"
        android:gravity="center"
        android:text="Are you sure you want to logout from your account?"
        android:textColor="@color/gray"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/Logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="25dp"
        android:weightSum="2"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delet">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/accept"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/reed"
            android:fontFamily="@font/cairo_bold"
            android:gravity="center"
            android:text="Yes, logout"
            android:textAllCaps="false"
            android:textSize="13dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reject"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/cairo_bold"
            android:gravity="center"
            android:text="No, stay in"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:textAllCaps="false"
            android:textSize="13dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>